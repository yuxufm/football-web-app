{% extends 'base.html.twig' %}

{% block title %}
	Player Transfers Success
{% endblock %}

{% block body %}
	<h1 class="mt-5 mb-2">Thank you for your purchase</h1>
	<h3 class="mb-5">This player is now on your team list!</h3>

	<div class="card pt-3" style="width: 18rem;">
		<div class="text-center">
			<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" style="height: 100px; width: 100px;">
				<path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z"/>
			</svg>
		</div>
		<div class="card-body">
			<h5>{{ player.name }}</h5>
			<h6>Team:
				{{ player.team.name }}</h6>
			<div>Country:
				{{ player.team.country }}</div>
			<div>Surname:
				{{ player.surname }}</div>
			<div class="mt-3">Transfer fee:
				{{ player.transferFee }}</div>
			<div>Your money balance:
				{{ team.moneyBalance }}</div>

			<a class="btn btn-sm btn-secondary mt-4" href="{{ path('app_players_index', {'team_id': app.request.query.get('buying_team_id')}) }}">Back to my players list</a>

		</div>
	</div>
{% endblock %}
