{{ form_start(form) }}

<div class="form-group mb-3">
	<label for="team">Team</label>
	<input readonly type="text" class="form-control" value="{{team.name}}">
</div>

<div class="form-group mb-3">
	{{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
</div>

<div class="form-group mb-3">
	{{ form_row(form.surname, {'attr': {'class': 'form-control'}}) }}
</div>

<div class="form-group mb-3">
	{{ form_row(form.transfer_fee, {'attr': {'class': 'form-control'}}) }}
</div>

<div class="form-group mb-3">
	{{ form_row(form.is_open_for_transfer, {'attr': {'class': 'form-select'}}) }}
</div>

<button class="btn {{ button_color|default('btn-primary') }} mt-3 d-block w-100">{{ button_label|default('Save') }}</button>
<a class="btn btn-sm btn-secondary mt-5 d-block" href="{{ path('app_players_index', {'team_id': app.request.query.get('team_id')}) }}">Back to list</a>

{{ form_end(form) }}
