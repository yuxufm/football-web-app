{% extends 'base.html.twig' %}

{% block title %}Players
{% endblock %}

{% block body %}
	<h1>Players</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Team</th>
				<td>{{ player.team.name }}</td>
			</tr>
			<tr>
				<th>Id</th>
				<td>{{ player.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ player.name }}</td>
			</tr>
			<tr>
				<th>Surname</th>
				<td>{{ player.surname }}</td>
			</tr>
			<tr>
				<th>Transfer fee</th>
				<td>{{ player.transferFee }}</td>
			</tr>
			<tr>
				<th>Is open for transfer</th>
				<td>{{ player.isOpenForTransfer ? '<span class="badge bg-success">Yes</span>' : '<span class="badge bg-danger">No</span>' }}</td>
			</tr>
			<tr>
				<th>Created at</th>
				<td>{{ player.createdAt ? player.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Updated at</th>
				<td>{{ player.updatedAt ? player.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<a class="btn btn-sm btn-secondary mt-5 d-block" href="{{ path('app_players_index', {'team_id': player.team.id}) }}">Back to list</a>

	<a class="btn btn-sm btn-primary mt-3 d-block" href="{{ path('app_players_edit', {'id': player.id, 'team_id': player.team.id}) }}">Edit</a>

	{{ include('players/_delete_form.html.twig') }}
{% endblock %}
